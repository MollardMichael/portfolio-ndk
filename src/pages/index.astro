---
import { Image } from "astro:assets";
import Layout from "../components/layout.astro";
import { projects } from "../components/projects";
---

<style>
  .hero {
    position: relative;
    text-align: center;
    color: #323232;
  }

  .hero .centered {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    border-radius: 10px;
  }

  .hero .centered h1 span, .hero .centered p span {
    background-color: white;
  }


  .hero img {
    width: 100%;
    height: 418px;
    object-fit: cover;
    object-position: 50% 50%;
  }
  
  .works h2 {
    text-align: center;
  }

  .works .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
  }

  .works .container img {
    width: 100%;
    height: 300px;
    object-fit: cover;
  }

  @media (width <= 768px) {
    .works .container {
      grid-template-columns: 1fr;
    }
  }
</style>

<Layout
  home
>
  <main>
    <section class="hero">
      <img src="/images/banner1.jpg">
      <div class="centered">
        <h1><span>昆　和<br>ポートフォリオ</span></h1>
      </div>
    </section>
    <section class="works">
      <h2>Works</h2>
      <div class="container">
        {
          projects.map(project => <div class="work-container">
            <div class="image">
              <Image src={project.image} alt="project main image" height={600}/>
            </div>
              <div>
                <h3>{project.title}</h3>
                <p>{project.description}</p>
                <a href={project.link} class="button">
                    見る
                </a>
              </div>
          </div>)
        }
      </div>
    </section>
  </main>
</Layout>
