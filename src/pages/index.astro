---
import Layout from "../components/layout.astro";

const projects = [
	{
		title: "料金比較のセレクトラ",
		image: "/images/selectra.png",
		description: "料金比較サイト「セレクトラ」のUI/UX改善",
		link: "/pdf/selectra.pdf",
		slideLink:
			"https://docs.google.com/presentation/d/e/2PACX-1vT33otSCt5AzZBM_MrFUYPOizabb0WLMtgY8ksN2ELSJW93j0Xpnl3WPIm-Ge1lwjFuBLC999h5NMEu/pub?start=false&loop=false&delayms=3000",
	},
	{
		title: "Artfull",
		image: "/images/art.png",
		description: "【架空】アートギャラリー向けスマホアプリ",
		link: "/pdf/artful.pdf",
		slideLink:
			"https://docs.google.com/presentation/d/e/2PACX-1vRMIEGfJQ1kB78RkgIkb4CMvSkwrH4vOvHc_ZGb0CITCZrb6j-fJbaQ5Gfbrbcw2Ttw6TRkqWcmo_b7/pub?start=false&loop=false&delayms=3000",
	},
	{
		title: "Chrome typeの習作",
		image: "/images/rei-dreamy.png",
		description: "会社の先輩の名前でロゴを作成しステッカーにしてプレゼントした",
		link: "/images/rei-dreamy.png",
	},
];
---

<style>
  .hero {
    position: relative;
    text-align: center;
    color: #323232;
  }

  .hero .centered {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    padding: 32px;
    border-radius: 10px;
  }

  .hero .centered h1 span, .hero .centered p span {
    background-color: white;
  }


  .hero img {
    width: 100%;
    height: 418px;
    object-fit: cover;
    object-position: 50% 50%;
  }
  
  .works h2 {
    text-align: center;
  }

  .works .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
  }

  .works .container img {
    width: 100%;
    height: 300px;
    object-fit: cover;
  }

  @media (width <= 768px) {
    .works .container {
      grid-template-columns: 1fr;
    }
  }
</style>

<Layout
  home
>
  <main>
    <section class="hero">
      <img src="/images/banner1.jpg">
      <div class="centered">
        <h1><span>Nodoka Kon</span></h1>
        <p>
          <span>UI/UX Designer based in Tokyo</span>
        </p>
      </div>
    </section>
    <section class="works">
      <h2>Works</h2>
      <div class="container">
        {
          projects.map(project => <div class="work-container">
            <div class="image">
              <img src={project.image} alt="project main image"/>
            </div>
              <div>
                <h3>{project.title}</h3>
                <p>{project.description}</p>
                <a href={project.link} class="button">
                    見る
                </a>
              </div>
          </div>)
        }
      </div>
    </section>
  </main>
</Layout>
