---
import { Text } from "../components/atoms/text/text";
import Layout from "../components/layout.astro";
import { Aside } from "../components/layout/aside/aside";
---

<style>
  main {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-24);

    padding: var(--spacing-48) var(--spacing-96); 
  }

  .section-title {
    min-width: 144px;
  }

  .list {
    margin: 0;
    padding: 0px var(--spacing-20);
  }

  @media (width <= 768px) {
    main {
      padding: var(--spacing-48) var(--spacing-24);
    }
  }
</style>

<Layout>
  <main>
    <Text mode="h2">Professional Experiences</Text>
    <Aside>
      <div slot="section-name" class="section-title">2020 - 現在&nbsp;&nbsp;</div>
      <div>
        <Text mode="h3">Selectra France / Selectra Japan</Text>
        <Text mode="h3">コンテンツディレクター・UI/UXデザイナー</Text>
        <Text mode="body">フランス・パリ本社（2020年～2023年12月）/ 東京（2024年1月～）</Text>
        <ul class="list">
          <li>
            <Text mode="body">
            日本版ウェブサイトのUX/UI改善
            </Text>
          </li>
          <li>
            <Text mode="body">
            社内デザイン部門・エンジニア部門との連携してのウェブデザイン業務
            </Text>
          </li>
          <li>
            <Text mode="body">
            自社サイトに掲載するコンテンツの企画立案
            </Text>
          </li>
          <li>
            <Text mode="body">
            自社サイトに掲載する広告のコピーライティング
            </Text>
          </li>
          <li>
            <Text mode="body">
            サイトパフォーマンスの効果測定（GA4, Hotjar, Zoho PageSense）
            </Text>
          </li>
          <li>
            <Text mode="body">
            自社で運営する比較サイトのSEO
            </Text>
          </li>
          <li>
            <Text mode="body">
            コンテンツライティング
            </Text>
          </li>
          <li>
            <Text mode="body">
            広告主との広告費交渉
            </Text>
          </li>
        </ul>
      </div>
    </Aside>
    <Aside>
      <div slot="section-name" class="section-title">2019 - 2020</div>
      <div>
        <Text mode="h3">JTB France</Text>
        <Text mode="h3">商品開発／デスティネーション・マネジメント</Text>
        <Text mode="body">フランス・パリ</Text>
        <ul class="list">
          <li>
            <Text mode="body">
            日本発フランス団体向けツアーの旅程企画考案
            </Text>
          </li>
          <li>
            <Text mode="body">
            日本発フランスツアーのパッケージ商品の旅程企画考案
            </Text>
          </li>
          <li>
            <Text mode="body">
            自社発行パンフレットの編集・校正業務
            </Text>
          </li>
          <li>
            <Text mode="body">
            現地サプライヤーとの交渉
            </Text>
          </li>
          <li>
            <Text mode="body">
            JTB公式アプリ内フランス部分のコンテンツ開発
            </Text>
          </li>
        </ul>
      </div>
    </Aside>
    <Text mode="h2">Education</Text>
    <Aside>
      <div slot="section-name" class="section-title">2015 - 2019</div>
      <div>
        <Text mode="h3">東北大学文学部 人文社会学科 美学西洋美術史専攻</Text>
